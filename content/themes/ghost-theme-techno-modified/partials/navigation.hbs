                    <img class="logo" data-bind="attr: { src: config.logo}"/>
                    {{@blog.title}}
                </a>
            </div>
            <div class="navbar-collapse navbar-responsive-collapse collapse" style="height: 1px;">
                <ul class="navbar-nav nav menu menu-main-menu" data-bind="foreach: config.menu">
                  <li><a data-bind="attr: { href: route }, text: text"></a></li>
                </ul>
                <form class="navbar-form navbar-right" role="search">
                    <div class="form-group">
                        <input class="search" type="text" placeholder="Search..."/>
                    </div>
                </form>
            </div>
        </div>
       {{> search}}
    </div>
</nav>
